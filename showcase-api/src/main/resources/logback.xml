<configuration>
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%m%n</pattern>
		</encoder>
	</appender>
	
	<logger name="com.XXX.XXX" level="DEBUG" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>
	
	<root level="INFO">
		<appender-ref ref="CONSOLE" />
	</root>
</configuration>